{
	"name": "DuckDuckGo with Cortana",
	"short_name": "DuckDuckGoWithCortana",
	"description": "Redirect Bing urls to DuckDuckGo for use with cortana.",

	"author": "Sean O'Leary",
	"homepage_url": "https://o-leary.com/",
	"version": "1.1",

	"manifest_version": 2,

	"icons": {
		"16": "icon16.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"*://www.bing.com/",
		"background"
	],
	"background": {
		"scripts": ["duckduckgowithcortana.js"]
	},
  "externally_connectable": {
    "matches": ["*://o-leary.com/*"]
  }
}